{
  "name": "@rpearce/hex",
  "version": "0.2.1",
  "description": "Hexadecimal color code & RGBa utility functions",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:rpearce/hex.git"
  },
  "homepage": "https://github.com/rpearce/hex",
  "bugs": "https://github.com/rpearce/hex/issues",
  "author": "Robert Pearce <me@robertwpearce.com>",
  "contributors": [
    "Robert Pearce <me@robertwpearce.com> (https://robertwpearce.com)"
  ],
  "license": "ISC",
  "keywords": [
    "hex",
    "hexadecimal",
    "hex-to-rgb",
    "hex-to-rgba",
    "rgba-to-hex",
    "rgb-to-hex"
  ],
  "tags": [
    "hex",
    "hexadecimal",
    "hex-to-rgb",
    "hex-to-rgba",
    "rgba-to-hex",
    "rgb-to-hex"
  ],
  "files": [
    "AUTHORS",
    "LICENSE",
    "README.md",
    "src/"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run build:js",
    "build:js": "rm -rf src && babel source --out-dir src",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coverage:report": "nyc report --reporter=lcov && echo \"view coverage: ./coverage/lcov-report/index.html\"",
    "lint": "eslint --ext .js .",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "npm run lint && nyc ava --verbose"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.0.0",
    "all-contributors-cli": "^6.1.2",
    "ava": "^1.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.0",
    "nyc": "^13.3.0"
  },
  "ava": {
    "babel": {
      "testOptions": {
        "babelrc": false,
        "configFile": false
      }
    },
    "files": [
      "test/**/*.js"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "nyc": {
    "include": [
      "index.js",
      "source/**/*.js"
    ]
  }
}
