{
  "name": "@rpearce/hex",
  "version": "1.0.3",
  "description": "Hexadecimal color code & RGBa utility functions",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:rpearce/hex.git"
  },
  "homepage": "https://github.com/rpearce/hex",
  "bugs": "https://github.com/rpearce/hex/issues",
  "author": "Robert Pearce <me@robertwpearce.com>",
  "license": "BSD-3",
  "keywords": [
    "hex",
    "hexadecimal",
    "hex-to-rgb",
    "hex-to-rgba",
    "rgba-to-hex",
    "rgb-to-hex"
  ],
  "tags": [
    "hex",
    "hexadecimal",
    "hex-to-rgb",
    "hex-to-rgba",
    "rgba-to-hex",
    "rgb-to-hex"
  ],
  "files": [
    "AUTHORS",
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf dist && run-p build:cjs build:esm build:umd",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:docs": "rm -rf docs/ && mkdir -p docs && build-storybook -o docs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:umd": "tsc -p tsconfig.umd.json",
    "ci": "run-p lint test build",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "lint": "eslint .",
    "prepublishOnly": "run-p lint test build",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/node": "15.0.1",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "all-contributors-cli": "6.20.0",
    "eslint": "7.25.0",
    "eslint-plugin-jest": "24.3.6",
    "jest": "26.6.3",
    "npm-run-all": "4.1.5",
    "ts-jest": "26.5.5",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  },
  "dependencies": {
    "tslib": "^2.0.3"
  }
}
